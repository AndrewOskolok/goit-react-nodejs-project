            "enum": ["income", "expense"]
          },
          "category": {
            "type": "string",
            "description": "Transaction's category. Default or user's custom allowed in body"
          },
          "description": {
            "type": "string",
            "description": "Transaction's description"
          },
          "amount": {
            "type": "integer",
            "description": "Transaction's amount"
          },
          "balanceAfter": {
            "type": "integer",
            "description": "User's balance after provided transaction"
          },
          "_id": {
            "type": "string",
